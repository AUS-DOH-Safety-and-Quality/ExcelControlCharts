{
  "compilerOptions": {
    "allowJs": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ],
  "ts-node": {
    "files": true
  }
}
